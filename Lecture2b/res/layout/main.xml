<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray">
<TextView android:text="@string/LeadText" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView1" android:textSize="24.5sp" android:typeface="serif" android:layout_marginBottom="30dip" android:layout_marginTop="30dip"></TextView>
<EditText android:layout_height="wrap_content" android:text="" android:layout_width="fill_parent" android:id="@+id/editText1"></EditText>
<RadioGroup android:id="@+id/radioGroup1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dip">
    <RadioButton android:id="@+id/radio0" android:text="Male" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true"></RadioButton>
    <RadioButton android:id="@+id/radio1" android:text="Female" android:layout_width="wrap_content" android:layout_height="wrap_content"></RadioButton>
</RadioGroup>
<Button android:text="Submit" android:id="@+id/button1" android:layout_height="wrap_content" android:layout_marginTop="30dip" android:layout_width="fill_parent" android:textSize="24.5sp"></Button>
</LinearLayout>
